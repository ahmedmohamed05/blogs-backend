{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "ES2023",
		"strict": true,
		"esModuleInterop": true,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["prisma.config.ts", "node_modules"],
	"ts-node": {
		"esm": false,
		"transpileOnly": true
	}
}
